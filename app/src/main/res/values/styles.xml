<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Style used for the logo FITMATE-->
    <style name="Logo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/slightlyDarkerGreen</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for the main titles-->
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>

    </style>
    <!--Style used for the subtitles-->
    <style name="Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for the paragraphs-->
    <style name="Paragraph" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for the buttons to see more content-->
    <style name="More" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for the smaller texts-->
    <style name="Small" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for numeric counters-->
    <style name="NumberCount" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>
    <!--Style used for the "Done" buttons-->
    <style name="Done" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/bakbakone_regular</item>
    </style>

</resources>