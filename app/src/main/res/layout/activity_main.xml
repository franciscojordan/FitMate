<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regularGreen">

    <ImageView
        android:id="@+id/top_half_circle"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        app:srcCompat="@drawable/half_circle_top"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/bot_half_circle"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/half_circle_bot" />

    <TextView
        android:id="@+id/fitmate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FITMATE"
        android:textAppearance="@style/Logo" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_half_circle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/box"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:hint="Nombre de usuario">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:background="@color/white"
            android:hint="ContraseÃ±a">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-35dp"
            android:height="75dp"
            android:background="@drawable/done_button"
            android:padding="10dp"
            android:text="Hecho"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>
